<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:textSize="20sp"
            android:text="TITLE"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/postdate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="right"
            android:text="20171025"
            android:textColor="#ff1100" />

    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="descriptondescriptondescriptondescriptondescriptondescriptondescriptondescriptondescriptondescriptondescriptondescriptondescriptondescriptondescriptondescriptondescriptondescriptondescripton" />

    <TextView
        android:id="@+id/bloggername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:gravity="right"
        android:text="NAME"
        android:textSize="20sp" />

</LinearLayout>
